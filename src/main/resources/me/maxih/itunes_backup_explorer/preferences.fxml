<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="550.0" prefWidth="650.0" stylesheets="@stylesheet.css" xmlns="http://javafx.com/javafx/11.0.14-internal"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="me.maxih.itunes_backup_explorer.ui.PreferencesController">
   <ScrollPane fitToWidth="true" AnchorPane.bottomAnchor="60.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <VBox spacing="20" styleClass="preferences-container">
         <padding>
            <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
         </padding>

         <VBox spacing="10">
            <Label text="Backup Locations" styleClass="section-title"/>
            <Label text="Diretórios onde o iTunes armazena seus backups" styleClass="info-label" wrapText="true"/>
            <ListView fx:id="backupRootsListView" prefHeight="120.0">
               <VBox.margin>
                  <Insets top="5.0"/>
               </VBox.margin>
            </ListView>
            <HBox spacing="10">
               <Button text="Add Directory..." onAction="#addDirectory"/>
               <Button text="Remove Selected" onAction="#removeDirectory"/>
            </HBox>
         </VBox>

         <Separator/>

         <VBox spacing="10">
            <Label text="Appearance" styleClass="section-title"/>
            <Label text="Tema da interface (apenas Dark disponível no momento)" styleClass="info-label" wrapText="true"/>
            <HBox spacing="10" alignment="CENTER_LEFT">
               <Label text="Theme:" styleClass="info-label"/>
               <ComboBox fx:id="themeComboBox" prefWidth="150.0"/>
            </HBox>
         </VBox>

         <Separator/>

         <VBox spacing="10">
            <Label text="Export Settings" styleClass="section-title"/>
            <CheckBox fx:id="preserveTimestampsCheckBox" text="Preservar timestamps originais dos arquivos"/>
            <CheckBox fx:id="createDirectoryStructureCheckBox" text="Criar estrutura de diretórios na exportação"/>
            <CheckBox fx:id="skipExistingFilesCheckBox" text="Pular arquivos existentes automaticamente"/>
         </VBox>

         <Separator/>

         <VBox spacing="10">
            <Label text="About" styleClass="section-title"/>
            <HBox spacing="10">
               <Label text="Versão:" styleClass="info-label" minWidth="100.0"/>
               <Label fx:id="versionLabel" styleClass="info-value"/>
            </HBox>
            <HBox spacing="10">
               <Label text="Java Version:" styleClass="info-label" minWidth="100.0"/>
               <Label fx:id="javaVersionLabel" styleClass="info-value"/>
            </HBox>
            <HBox spacing="10">
               <Label text="Platform:" styleClass="info-label" minWidth="100.0"/>
               <Label fx:id="platformLabel" styleClass="info-value"/>
            </HBox>
         </VBox>
      </VBox>
   </ScrollPane>

   <HBox spacing="10" alignment="CENTER_RIGHT" AnchorPane.bottomAnchor="15.0" AnchorPane.rightAnchor="20.0">
      <Button text="Save" onAction="#save" prefWidth="80.0"/>
      <Button text="Cancel" onAction="#cancel" prefWidth="80.0"/>
   </HBox>

   <Button text="Reset to defaults" onAction="#resetToDefaults" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="20.0"/>
</AnchorPane>
